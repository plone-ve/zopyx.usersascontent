<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal" xmlns:i18n="http://xml.zope.org/namespaces/i18n" lang="en"
    metal:use-macro="here/main_template/macros/master" i18n:domain="zopyx.usersascontent">
    <body>
        <div metal:fill-slot="main">
            <h1 class="documentFirstHeading">${context/fullname}</h1>

            <div id="my-metadata">
                <div tal:condition="context/email">
                    <span class="label" i18n:translate="">E-Mail</span>:
                    <a href="mailto:${context/email}">${context/email}</a>
                </div>
                <div tal:condition="context/organization">
                    <span class="label" i18n:translate="">Organization</span>:
                    <a href="mailto:${context/organization}">${context/organization}</a>
                </div>
                <div tal:condition="context/url">
                    <span class="label" i18n:translate="">URL</span>:
                    <a href="${context/url}">${context/url}</a>
                </div>
                <div tal:condition="context/text">
                    <span class="label" i18n:translate="">Personal information</span>:
                    <div i18n:translate="" tal:content="structure context/text/output"></div>
                </div>
                <div tal:condition="python: context.picture">
                    <img class="" 
                        tal:attributes="src string:${context/absolute_url}/@@images/picture/large" alt="Portrait: ${context/fullname}" />
                </div>
            </div>

            <tal:def define="items view/my_content">
                <h2 i18n:translate="">My content</h2>
                <table class="table table-light listing" tal:condition="items">
                    <thead>
                        <tr>
                            <th i18n:translate="">Title</th>
                            <th i18n:translate="">Path</th>
                            <th i18n:translate="">Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr tal:repeat="item items">
                            <td>
                                <a href="${item/getURL}">${item/Title}</a>
                            </td>
                            <td>${item/getPath}</td>
                            <td i18n:translate="">${item/portal_type}</td>
                        </tr>
                    </tbody>
                </table>
            </tal:def>

            <tal:def define="items view/my_forward_references">
                <h2 i18n:translate="" tal:condition="items">Forward references</h2>
                <tal:loop tal:repeat="relationship items">
                    <table class="table table-light listing" tal:condition="items/?relationship">
                        <caption>${relationship}</caption>
                        <thead>
                            <tr>
                                <th i18n:translate="">Title</th>
                                <th i18n:translate="">Path</th>
                                <th i18n:translate="">Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="item items/?relationship">
                                <td>
                                    <a href="${item/absolute_url}">${item/Title}</a>
                                </td>
                                <td>${python: item.absolute_url(1)}</td>
                                <td i18n:translate="">${item/portal_type}</td>
                            </tr>
                        </tbody>
                    </table>
                </tal:loop>
            </tal:def>

            <tal:def define="items view/my_backward_references">
                <h2 i18n:translate="" tal:condition="items">Backward references</h2>
                <tal:loop tal:repeat="relationship items">
                    <table class="table table-light listing" tal:condition="items/?relationship">
                        <caption>${relationship}</caption>
                        <thead>
                            <tr>
                                <th i18n:translate="">Title</th>
                                <th i18n:translate="">Path</th>
                                <th i18n:translate="">Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr tal:repeat="item items/?relationship">
                                <td>
                                    <a href="${item/absolute_url}">${item/Title}</a>
                                </td>
                                <td>${python: item.absolute_url(1)}</td>
                                <td i18n:translate="">${item/portal_type}</td>
                            </tr>
                        </tbody>
                    </table>
                </tal:loop>
            </tal:def>
        </div>
    </body>

</html>

